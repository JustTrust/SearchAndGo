<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="relative_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/view_padding</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="bottom_panel_views">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="panels_style">
        <item name="android:layout_marginRight">@dimen/activity_default_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_default_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_default_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_default_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_default_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_default_margin</item>
        <item name="android:background">@drawable/search_bar_bg</item>

    </style>

</resources>
